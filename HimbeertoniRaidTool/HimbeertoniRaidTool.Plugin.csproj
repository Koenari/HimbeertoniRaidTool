<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Authors>Koenari</Authors>
    <Company></Company>
    <Version>1.1.4.59</Version>
    <Description>A collection of useful tools for RaidGroups, including loot management</Description>
    <Copyright></Copyright>
    <PackageProjectUrl>https://github.com/Koenari/HimbeertoniRaidTool</PackageProjectUrl>
  </PropertyGroup>
  <PropertyGroup>
    <TargetFramework>net7.0-windows</TargetFramework>
    <Platforms>x64</Platforms>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <RestorePackagesWithLockFile>true</RestorePackagesWithLockFile>
  </PropertyGroup>

  <ProjectExtensions>
    <DalamudPlugin>
      <ApiLevel>7</ApiLevel>
      <Author>Koenari</Author>
      <Name>Himbeertoni Raid Tool</Name>
      <Punchline>All you need for Raiding</Punchline>
      <Description>A collection of useful tools for RaidGroups, including loot managemen</Description>
      <IconUrl>https://raw.githubusercontent.com/Koenari/HimbeertoniRaidTool/master/images/icon.png</IconUrl>
      <Tags>
        <Tag>Raid</Tag>
        <Tag>Loot</Tag>
        <Tag>Equipment</Tag>
        <Tag>Gear</Tag>
      </Tags>
      <Hidden>False</Hidden>
    </DalamudPlugin>
  </ProjectExtensions>
  <PropertyGroup>
    <DalamudLibPath>$(appdata)\XIVLauncher\addon\Hooks\dev\</DalamudLibPath>
    <AssemblyName>HimbeertoniRaidTool</AssemblyName>
    <Product>Himbeertoni Raid Tool</Product>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
    <RootNamespace>HimbeertoniRaidTool.Plugin</RootNamespace>
    <PackageIcon>icon.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/Koenari/HimbeertoniRaidTool.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>Raid;Loot;Equipment</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DalamudPackager" Version="2.1.10" />
    <Reference Include="FFXIVClientStructs">
      <HintPath>$(DalamudLibPath)FFXIVClientStructs.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="Newtonsoft.Json">
      <HintPath>$(DalamudLibPath)Newtonsoft.Json.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="Dalamud">
      <HintPath>$(DalamudLibPath)Dalamud.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="ImGui.NET">
      <HintPath>$(DalamudLibPath)ImGui.NET.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="ImGuiScene">
      <HintPath>$(DalamudLibPath)ImGuiScene.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="Lumina">
      <HintPath>$(DalamudLibPath)Lumina.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="Lumina.Excel">
      <HintPath>$(DalamudLibPath)Lumina.Excel.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <None Include="..\.editorconfig" Link=".editorconfig" />
    <None Include="..\images\icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\LICENSE.md">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\lib\HimbeertoniRaidTool.Common\HimbeertoniRaidTool.Common\HimbeertoniRaidTool.Common.csproj" />
    <ProjectReference Include="..\lib\NetStone\NetStone\NetStone.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="..\Localization\**" Link="locale\%(RecursiveDir)\%(Filename)%(Extension)" CopyToOutputDirectory="Always" />
  </ItemGroup>
</Project>
